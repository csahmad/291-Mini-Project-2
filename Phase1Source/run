# Run the program

MAIN=Main
PYTHON=python3
CLEAN="true"

echo "Type in the xml file (Phase 1)"
read file 

cat $file | $PYTHON $MAIN.py

# If we should clean...
if [ $CLEAN = "true" ]
then

	# If there is a makefile, run "make clean" (obviously fails if there is no
	# "clean" in the makefile)
	if [ -f Makefile ] || [ -f makefile ] || [ -f MAKEFILE ] || [ -f MakeFile ]
	then
	    make clean
	fi
fi